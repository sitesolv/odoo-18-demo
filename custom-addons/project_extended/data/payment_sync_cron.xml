<odoo>
    <data noupdate="1">
        <!-- Scheduled Action for Payment to Project Income Sync -->
        <record id="ir_cron_sync_payments_to_project_income" model="ir.cron">
            <field name="name">Sync Payments to Project Income</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_payments_to_project_income()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
