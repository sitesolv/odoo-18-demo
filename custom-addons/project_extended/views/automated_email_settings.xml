<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Automated Email Settings -->
        <record id="view_automated_email_config" model="ir.ui.view">
            <field name="name">automated.email.config.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <div class="app_settings_block" data-string="Automated Email Reminders" string="Automated Email Reminders">
                        <h2>Domain and Hosting Expiry Reminders</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="auto_send_expiry_emails"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="auto_send_expiry_emails"/>
                                    <div class="text-muted">
                                        Automatically send email reminders to clients when domains and hosting services are about to expire
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <strong>Email Schedule:</strong>
                                            <ul>
                                                <li>7 days before expiry: Warning email</li>
                                                <li>3 days before expiry: Urgent email</li>
                                                <li>1 day before expiry: Very urgent email</li>
                                                <li>On expiry date: Expired email</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
