<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Project Reporting -->
    <record id="view_project_reporting_tree" model="ir.ui.view">
        <field name="name">project.reporting.view.list</field>
        <field name="model">project.reporting.view</field>
        <field name="arch" type="xml">
            <list string="Project Financial Report" create="false" edit="false" delete="false">
                <field name="project_name"/>
                <field name="client_name"/>
                <field name="total_income" sum="Total Income" widget="monetary"/>
                <field name="total_expense" sum="Total Expense" widget="monetary"/>
                <field name="net_profit" sum="Net Profit" widget="monetary" 
                       decoration-success="net_profit &gt; 0" 
                       decoration-danger="net_profit &lt; 0"/>
                <field name="profit_margin" string="Margin %"/>
                <field name="status" 
                       decoration-success="status == 'Profitable'" 
                       decoration-danger="status == 'Loss'"
                       decoration-warning="status == 'Break Even'"/>
            </list>
        </field>
    </record>

    <!-- Kanban View for Project Reporting -->
    <record id="view_project_reporting_kanban" model="ir.ui.view">
        <field name="name">project.reporting.view.kanban</field>
        <field name="model">project.reporting.view</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false" edit="false" delete="false">
                <field name="project_name"/>
                <field name="client_name"/>
                <field name="total_income"/>
                <field name="total_expense"/>
                <field name="net_profit"/>
                <field name="profit_margin"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="project_name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <i class="fa fa-user"/> <field name="client_name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="o_field_widget">
                                            <span class="text-success">
                                                <i class="fa fa-arrow-up"/> Income: $<t t-esc="record.total_income.value.toFixed(2)"/>
                                            </span>
                                        </div>
                                        <div class="o_field_widget">
                                            <span class="text-warning">
                                                <i class="fa fa-arrow-down"/> Expense: $<t t-esc="record.total_expense.value.toFixed(2)"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="o_field_widget">
                                            <span t-att-class="record.net_profit.value >= 0 ? 'text-success' : 'text-danger'">
                                                <i class="fa fa-money"/> Profit: $<t t-esc="record.net_profit.value.toFixed(2)"/>
                                            </span>
                                        </div>
                                        <div class="o_field_widget">
                                            <span class="text-info">
                                                <i class="fa fa-percent"/> Margin: <t t-esc="record.profit_margin.value.toFixed(1)"/>%
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <span class="badge" 
                                          t-att-class="record.status.value === 'Profitable' ? 'badge-success' : 
                                                      record.status.value === 'Loss' ? 'badge-danger' : 'badge-warning'">
                                        <field name="status"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View for Project Reporting -->
    <record id="view_project_reporting_search" model="ir.ui.view">
        <field name="name">project.reporting.view.search</field>
        <field name="model">project.reporting.view</field>
        <field name="arch" type="xml">
            <search string="Project Financial Report">
                <field name="project_name"/>
                <field name="client_name"/>
                <field name="status"/>
                <filter string="Profitable" name="profitable" domain="[('status', '=', 'Profitable')]"/>
                <filter string="Loss Making" name="loss" domain="[('status', '=', 'Loss')]"/>
                <filter string="Break Even" name="break_even" domain="[('status', '=', 'Break Even')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Client" name="group_client" domain="[]" context="{'group_by': 'client_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Project Reporting Dashboard -->
    <record id="action_project_reporting_dashboard_view" model="ir.actions.act_window">
        <field name="name">Project Financial Dashboard</field>
        <field name="res_model">project.reporting.view</field>
        <field name="view_mode">kanban,list</field>
        <field name="view_id" ref="view_project_reporting_kanban"/>
        <field name="search_view_id" ref="view_project_reporting_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Project Financial Dashboard
            </p>
            <p>
                View comprehensive financial data for all your projects including income, expenses, profit/loss, and status.
            </p>
        </field>
    </record>

</odoo>
