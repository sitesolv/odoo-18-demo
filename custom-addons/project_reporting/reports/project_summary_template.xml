<odoo>
  <template id="project_summary_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="project">
        <div class="page">
          <h2>Project: <t t-esc="project.name"/></h2>
          <p>Client: <t t-esc="project.partner_id.name"/></p>

          <h3>Financial Summary</h3>
          <ul>
            <li>Total Income: <t t-esc="sum(income.amount for income in project.project_income_ids)"/></li>
            <li>Total Expense: <t t-esc="sum(expense.amount for expense in project.project_expense_ids)"/></li>
            <li>Net Profit: <t t-esc="sum(income.amount for income in project.project_income_ids) - sum(expense.amount for expense in project.project_expense_ids)"/></li>
          </ul>

          <h4>Upcoming Domains</h4>
          <ul>
            <t t-foreach="project.domain_ids" t-as="domain">
              <li><t t-esc="domain.name"/> â†’ <t t-esc="domain.expiry_date"/></li>
            </t>
          </ul>
        </div>
      </t>
    </t>
  </template>
</odoo>
