<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="project_reporting.ProjectDashboardTemplate" owl="1">
        <div class="o_project_dashboard">
            <!-- Header -->
            <div class="o_dashboard_header d-flex justify-content-between align-items-center mb-3">
                <h1 class="h3 mb-0">Project Dashboard Test</h1>
                <button class="btn btn-primary" t-on-click="refreshDashboard">
                    <i class="fa fa-refresh"></i> Refresh
                </button>
            </div>

            <!-- Test Message -->
            <div class="alert alert-info">
                Dashboard is loading correctly! Template found and rendered.
            </div>

            <!-- Loading State -->
            <div t-if="state.loading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="mt-2">Loading project data...</p>
            </div>

            <!-- Dashboard Content -->
            <div t-if="!state.loading" class="o_dashboard_content">
                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Total Projects</h4>
                                        <h2 t-esc="state.dashboardData.total_projects || 0"></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fa fa-folder fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Active Projects</h4>
                                        <h2 t-esc="state.dashboardData.active_projects || 0"></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fa fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Inactive Projects</h4>
                                        <h2 t-esc="state.dashboardData.inactive_projects || 0"></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fa fa-pause-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Projects with Tasks</h4>
                                        <h2 t-esc="state.dashboardData.projects_with_tasks || 0"></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fa fa-tasks fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Projects List Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">Projects List</h5>
                                <span class="badge badge-primary" t-esc="state.projects.length + ' Projects'"></span>
                            </div>
                            <div class="card-body p-0">
                                <div t-if="state.projects.length === 0" class="text-center py-4">
                                    <i class="fa fa-inbox fa-3x text-muted"></i>
                                    <p class="text-muted mt-2">No projects found</p>
                                </div>
                                <div t-if="state.projects.length > 0" class="table-responsive">
                                    <table class="table table-striped table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Project Name</th>
                                                <th>Customer</th>
                                                <th>Project Manager</th>
                                                <th>Stage</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                                <th>Tasks</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.projects" t-as="project" t-key="project.id">
                                                <tr>
                                                    <td>
                                                        <strong t-esc="project.name"></strong>
                                                    </td>
                                                    <td t-esc="project.partner_id"></td>
                                                    <td t-esc="project.user_id"></td>
                                                    <td>
                                                        <span class="badge badge-secondary" t-esc="project.stage_id"></span>
                                                    </td>
                                                    <td t-esc="project.date_start || '-'"></td>
                                                    <td t-esc="project.date || '-'"></td>
                                                    <td>
                                                        <span class="badge badge-info" t-esc="project.task_count"></span>
                                                        <span t-if="project.task_count_with_subtasks !== project.task_count" 
                                                              class="badge badge-light ml-1" 
                                                              t-esc="'(' + project.task_count_with_subtasks + ' total)'"></span>
                                                    </td>
                                                    <td>
                                                        <span t-if="project.active" class="badge badge-success">Active</span>
                                                        <span t-if="!project.active" class="badge badge-secondary">Inactive</span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <button class="btn btn-sm btn-outline-primary" 
                                                                    t-on-click="(ev) => this.openProject(project.id)"
                                                                    title="Open Project">
                                                                <i class="fa fa-eye"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-info" 
                                                                    t-on-click="(ev) => this.openProjectTasks(project.id)"
                                                                    title="View Tasks">
                                                                <i class="fa fa-tasks"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
