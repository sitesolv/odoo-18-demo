<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extended Project List View with Financial Data -->
    <record id="view_project_dashboard_list" model="ir.ui.view">
        <field name="name">project.project.dashboard.list</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <list string="Project Financial Dashboard" create="false">
                <field name="name"/>
                <field name="partner_id" string="Client"/>
                <field name="user_id" string="Project Manager"/>
                <field name="date_start"/>
                <field name="active" column_invisible="1"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Extended Project Kanban View with Financial Data -->
    <record id="view_project_dashboard_kanban" model="ir.ui.view">
        <field name="name">project.project.dashboard.kanban</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="date_start"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <i class="fa fa-user"/> <field name="partner_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="o_field_widget">
                                            <span class="text-muted">Manager:</span><br/>
                                            <field name="user_id"/>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="o_field_widget">
                                            <span class="text-muted">Start Date:</span><br/>
                                            <field name="date_start"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <span class="badge badge-success">Active Project</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View for Project Dashboard -->
    <record id="view_project_dashboard_search" model="ir.ui.view">
        <field name="name">project.project.dashboard.search</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <search string="Project Dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <filter string="My Projects" name="my_projects" domain="[('user_id', '=', uid)]"/>
                <filter string="Active Projects" name="active_projects" domain="[('active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_client" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Project Manager" name="group_manager" domain="[]" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
