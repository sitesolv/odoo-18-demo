<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_project_expense" model="ir.ui.view">
        <field name="name">project.expense.form</field>
        <field name="model">project.expense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="employee_id" invisible="expense_type != 'salary'"/>
                        <field name="expense_type"/>
                        <field name="custom_expense_type" invisible="expense_type != 'other'" placeholder="Enter custom expense type..."/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="description"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_project_expense" model="ir.ui.view">
        <field name="name">project.expense.tree</field>
        <field name="model">project.expense</field>
        <field name="arch" type="xml">
            <list>
                <field name="project_id"/>
                <field name="expense_type"/>
                <field name="custom_expense_type"/>
                <field name="description"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="employee_id"/>
            </list>
        </field>
    </record>

    <record id="action_window_project_expense" model="ir.actions.act_window">
        <field name="name">Project Expenses</field>
        <field name="res_model">project.expense</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>